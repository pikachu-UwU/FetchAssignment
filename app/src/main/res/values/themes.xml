 <resources xmlns:tools="http://schemas.android.com/tools"
     xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base application theme. -->
    <style name="Theme.FetchInterview" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/navy_lt</item>
        <item name="colorPrimaryVariant">@color/navy_lt</item>
        <item name="colorOnPrimary">@color/navy_lt</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/navy_lt</item>
        <item name="android:windowBackground">@color/navy_lt</item>
    </style>

<!--     button style-->
     <style name="fetchButton">
         <item name="android:layout_margin">30dp</item>
         <item name="android:textColor">@color/navy_lt</item>
         <item name="android:minWidth">200dp</item>
         <item name="android:textSize">20sp</item>
         <item name="android:fontFamily">@font/ubuntu_bold</item>
     </style>

<!--     load circle style-->
     <style name="loadingCircle">
         <item name="android:indeterminate">true</item>
         <item name="android:indeterminateTint">@color/yellow_lt</item>
         <item name="android:minWidth">100dp</item>
         <item name="android:minHeight">100dp</item>
     </style>

</resources>